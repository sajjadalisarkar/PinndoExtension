{
    "manifest_version": 2, 
    "name": "Pinndo Extension", 
    "version": "0.1", 
    "description": "Pinndo extension for Google Chrome.", 
    "permissions": [
        "tabs",
        "http://*/",
        "https://*/",
        "storage"
    ],
    "browser_action": {
        "default_icon": "pinndo_38.png", 
        "name": "Pinndo Extension", 
        "default_title": "Pinndo Extension"
    }, 
    "content_scripts": [
       {
           "matches": [
               "<all_urls>"
           ],
           "js": [
               "loadPage.js"
           ]
       }
    ],
    "background": {
       "scripts": [
           "background.js"
       ]
    },
    "icons": {
       "16":  "pinndo_16.png",
       "48":  "pinndo_48.png",
       "128": "pinndo_128.png"
   }
}